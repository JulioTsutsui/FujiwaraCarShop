@model IEnumerable<FujiwaraCarShop.Models.Vehicle>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="banner d-flex align-items-center">
        <div class="container">
            <div class="wrapper">
                <h2 class="headline text-white d-block">BEST SHOP</h2>
                <div class="text-wrap">
                    <p class="leading d-block text-white">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi ac est bibendum, sodales lectus id, sagittis orci. Ut tempus rhoncus eros sit amet porta. Aliquam nulla neque, porttitor in leo sit amet, eleifend sollicitudin velit.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-3 mb-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-clock-fill" fill="rgb(0,63,186)" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                        </svg>
                        <br />
                        <br />
                        <h4 class="card-title font-weight-bolder">Speed</h4>
                        <p class="lead">This is some text within a card body.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-file-earmark-text-fill" fill="rgb(0,63,186)" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M2 3a2 2 0 0 1 2-2h5.293a1 1 0 0 1 .707.293L13.707 5a1 1 0 0 1 .293.707V13a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3zm7 2V2l4 4h-3a1 1 0 0 1-1-1zM4.5 8a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1h-7zM4 10.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1h-4a.5.5 0 0 1-.5-.5z" />
                        </svg>
                        <br />
                        <br />
                        <h4 class="card-title">Title</h4>
                        <p>This is some text within a card body.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-gear-fill" fill="rgb(0,63,186)" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872l-.1-.34zM8 10.93a2.929 2.929 0 1 0 0-5.86 2.929 2.929 0 0 0 0 5.858z" />
                        </svg>
                        <br />
                        <br />
                        <h4 class="card-title">Title</h4>
                        <p>This is some text within a card body.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <div class="container">
        <div class="row">
            <div class="col-md-3 brands justify-content-between">
                <h3>Brands</h3>
                @foreach (var item in ViewBag.Brands) {
                    <a href="#" class="btn border shadow-sm px-4 mb-2">
                        <img src="~/img/@item.Name-logo.png" width="70" height="70" alt="@item.Name Logo" />
                    </a>
                }
            </div>
            <div class="col-md-9">
                <h3>Cars</h3>
                <p class="lead">Take your time!</p>
                @foreach (var item in Model) {
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="~/img/@item.Photo"+".png" class="card-img img-fluid" alt="Car">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text">car model (description)</p>
                                    <h4 class="card-text font-weight-bolder text-danger">$ @item.Price.ToString("F2")</h4>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><span class="badge badge-info">@item.Brand.Name</span></p>
                                        </div>
                                        <div class="col-md-6 text-center">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-danger rounded-0 shadow-sm">More information</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


