@model Vehicle
@{
    ViewData["Title"] = "Vehicle Details";
}
    <div class="container pt-2">
        <a asp-action="Index" class="mt-2 text-decoration-none"> <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M5.854 4.646a.5.5 0 0 1 0 .708L3.207 8l2.647 2.646a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z" />
    <path fill-rule="evenodd" d="M2.5 8a.5.5 0 0 1 .5-.5h10.5a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
</svg> Back to home page</a>
        <h1 class="text-danger display-4">@Html.DisplayFor(model => model.Name)</h1>
        <div class="row">
            <div class="col-md-5">
                <img class="w-100" src="~/img/@Model.Photo" alt="@Model.Name car image" />
            </div>
            <div class="col-md-7 text-center">
                <div class="row d-flex justify-content-around h-100 align-items-center">
                    <div class="col-4 m-2">
                        <span class="font-weight-bolder h5">Year</span>
                        <p class="lead">@Model.Year</p>
                    </div>
                    <div class="col-4 m-2">
                        <span class="font-weight-bolder h5">Brand</span>
                        <p class="lead">@Model.Brand.Name</p>
                    </div>
                    <div class="col-4 m-2">
                        <span class="font-weight-bolder h5">Type</span>
                        <p class="lead">@Model.Type.Name</p>
                    </div>
                    <div class="col-4 m-2">
                        <span class="font-weight-bolder h5">Price</span>
                        <p class="lead">@Html.DisplayFor(model => model.Price)</p>
                    </div>
                </div>
                <button class="btn btn-outline-danger rounded-0 px-5">Buy</button>
            </div>
        </div>
    </div>